<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Adapter registry -->
        <service id="PB\Bundle\SmartImageBundle\Adapter\AdapterRegistry" public="false">
            <argument key="$defaultAdapter" type="string"/>
            <argument key="$adapters" type="collection"/>
        </service>

        <service id="PB\Bundle\SmartImageBundle\Adapter\AdapterRegistryInterface" alias="PB\Bundle\SmartImageBundle\Adapter\AdapterRegistry"/>

        <!--  TWIG extensions  -->
        <service id="PB\Bundle\SmartImageBundle\Twig\HTMLExtension" public="false">
            <tag name="twig.extension"/>
        </service>

        <service id="PB\Bundle\SmartImageBundle\Twig\HTMLRuntime" public="false">
            <tag name="twig.runtime"/>
        </service>

        <service id="PB\Bundle\SmartImageBundle\Twig\ImageExtension" public="false">
            <tag name="twig.extension"/>
        </service>

        <service id="PB\Bundle\SmartImageBundle\Twig\ImageRuntime" public="false">
            <argument key="$adapterRegistry"/>
            <tag name="twig.runtime"/>
        </service>
    </services>
</container>
